extends ../layout

block content
    article
        if(topic)
            h2= topic.title
            = topic.description
            if(topic.author)
            div= "By " + topic.author
        else 
            h2 Welcome!

        ul
            li
                a(href="/topic/add") add
            if(topic)
                li  
                    a(href="/topic/"+topic.id+"/edit") edit
                li
                    a(href="/topic/"+topic.id+"/delete") delete

            

